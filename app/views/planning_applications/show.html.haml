- @page_title = "Planning Application for " + @planning_application.address.split("\n")[0] + ", " + @planning_application.postcode

.planning_application{:id=>@planning_application.id}

  %p.description
    = @planning_application.description
  %p
    %span.date
      = @planning_application.date_received
    %span.comments
      = link_to "View comments", @planning_application.comment_url

  %p.address
    = @planning_application.address.gsub("\n", "<br />")
