- @page_title = @ward.name

#fix_my_street
  %h2
    Street problems 
  
  %p.quiet
    (via 
    = link_to 'Fix My Street', 'http://fixmystreet.com'
    )
    
  %h3
    = link_to 'Report a problem', 'http://fixmystreet.com'
  
  %h3
    Recent problems
    
  #recent_problems
    %ul
      = render :partial=> 'shared/rss_item', :collection=>@fix_my_street

  %h2
    Councillors
    
  #councillors.openly_local
    %ul
      - @openly_local_ward.members.each do |member|        
        %li

          .councillor.vcard
            .fn
              = member.first_name
              = member.last_name
            .org
              = member.party
            .adr
              .street_address
                = member.address
              .locality
                Birmingham
              .country-name
                UK
            .tel
              = member.telephone
            .email
              = link_to member.email, "mailto:#{member.email}"
            